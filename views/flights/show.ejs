<!DOCTYPE html>
<html>
  <head>
    <title>Mongoose Flights</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body class="bg-dark">
    <nav class="navbar navbar-dark bg-dark sticky-top d-flex justify-content-start">
      <a class="mr-2" href="/">Home</a>
      <a class="mr-2" href="/flights">Flights</a>
      <a class="mr-2" href="/tickets">Tickets</a>
    </nav>

  <h2 class="container-fluid mx-auto text-center text-white bg-dark mb-0">Flight Details</h2>  
    <h3 class="text-white bg-dark mb-0">Airline: <%= flight.airline %></h3>
    <h3 class="text-white bg-dark mb-0">Fight Number: <%= flight.flightNumber %></h3>
    <h3 class="text-white bg-dark mb-0">Departure Date: <%= flight.departs.toDateString() %></h3>
    <h3 class="text-white bg-dark mb-0">Departure Time: <%= flight.departs.toLocaleTimeString() %></h3>
   
  <form action="/flights/<%= flight._id %>/departures" method="POST" class="text-white bg-dark mb-0 p-2">
    
    <label>Destination:
      <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DAL">DAL</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
        <option value="SEA">SEA</option>
      </select>
    </label>
    <label>Arriving At:
      <input type="datetime-local" name="arrival">
    </label>
    <input type="submit" value="Update Flight">
  </form>
  <table class="table table-dark table-striped table-hover table-sm">
    <thead>
      <tr>
        <th>Airport</th>
        <th>Arrival</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(function(r) { %>
        <tr>
          <td><%= r.airport %></td>
          <td><%= r.arrival %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <button>
    <a href="<%= flight._id %>/tickets/new">Add a Ticket</a>
  </button>

  <table class="table table-dark table-striped table-hover table-sm">
    <thead>
      <tr>
        <th>Seat</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% tickets.forEach(function(ticket) { %>
        <tr>
          <td><%= ticket.seat %></td>
          <td><%= ticket.price %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  </body>
</html>